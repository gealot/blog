{
  "name": "blog",
  "version": "0.1.0",
  "private": true,
  "license": "BSD-3-Clause-Clear",
  "author": {
    "name": "ChoboDev",
    "url": "https://chobo.dev"
  },
  "homepage": "https://chobo.dev",
  "repository": {
    "type": "git",
    "url": "https://github.com/gealot/blog.git"
  },
  "bugs": {
    "url": "https://github.com/gealot/blog/issues"
  },
  "keywords": [
    "blog",
    "nextjs",
    "typescript",
    "tailwindcss",
    "markdown"
  ],
  "engines": {
    "node": ">=24",
    "pnpm": ">=10"
  },
  "scripts": {
    "dev:webpack": "next dev",
    "dev": "next dev --turbopack",
    "build": "next build",
    "start": "next start",
    "lint": "eslint . --ext .js,.jsx,.ts,.tsx,.mdx",
    "lint:fix": "eslint . --ext .js,.jsx,.ts,.tsx,.mdx --fix",
    "lint:strict": "eslint . --ext .js,.jsx,.ts,.tsx,.mdx --max-warnings 0",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "format:imports": "prettier --write \"src/**/*.{ts,tsx}\" --check-import-order",
    "check:imports": "prettier --check \"src/**/*.{ts,tsx}\" --check-import-order",
    "type-check": "tsc --noEmit",
    "quality": "pnpm run type-check && pnpm run lint:strict && pnpm run format:check",
    "quality:fix": "pnpm run type-check && pnpm run lint:fix && pnpm run format",
    "prepare": "husky",
    "commit": "cz"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,mdx,yaml,yml}": [
      "prettier --write"
    ],
    "*.{css,scss,sass}": [
      "prettier --write"
    ]
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "config": {
    "commitizen": {
      "path": "node_modules/cz-git"
    }
  },
  "sideEffects": false,
  "dependencies": {
    "@mdx-js/loader": "^3.1.1",
    "@mdx-js/react": "^3.1.1",
    "@next/mdx": "^15.5.2",
    "@radix-ui/react-alert-dialog": "^1.1.15",
    "@radix-ui/react-dialog": "^1.1.15",
    "@radix-ui/react-dropdown-menu": "^2.1.16",
    "@radix-ui/react-separator": "^1.1.7",
    "@radix-ui/react-slot": "^1.2.3",
    "@radix-ui/react-tooltip": "^1.2.8",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "date-fns": "^4.1.0",
    "fuse.js": "^7.1.0",
    "gray-matter": "^4.0.3",
    "lucide-react": "^0.542.0",
    "next": "15.5.2",
    "next-themes": "^0.4.6",
    "react": "19.1.1",
    "react-dom": "19.1.1",
    "rehype-autolink-headings": "^7.1.0",
    "rehype-highlight": "^7.0.2",
    "rehype-slug": "^6.0.0",
    "rss": "^1.2.2",
    "tailwind-merge": "^3.3.1"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@eslint/eslintrc": "^3",
    "@ianvs/prettier-plugin-sort-imports": "^4.7.0",
    "@tailwindcss/postcss": "^4.1.12",
    "@types/mdx": "^2.0.13",
    "@types/node": "^24.3.0",
    "@types/react": "^19.1.12",
    "@types/react-dom": "^19.1.9",
    "autoprefixer": "^10.4.21",
    "commitizen": "^4.3.1",
    "cssnano": "^7.1.1",
    "cz-git": "^1.12.0",
    "eslint": "^9.34.0",
    "eslint-config-next": "15.5.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-import-resolver-typescript": "^4.4.4",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-prettier": "^5.5.4",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.5",
    "postcss": "^8.5.6",
    "prettier": "^3.6.2",
    "prettier-plugin-tailwindcss": "^0.6.14",
    "tailwindcss": "^4.1.12",
    "tw-animate-css": "^1.3.7",
    "typescript": "^5"
  }
}
